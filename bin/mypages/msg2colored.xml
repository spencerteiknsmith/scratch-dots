<Page
    rows="3"
    cols="4">

  <Messages>
    <Message>TEST</Message>
    <Message>TWO</Message>
    <Message>END</Message>
  </Messages>
  
  <Character
      row="2"
      col="0" color="white, backblue">
    <Script>
      <Trigger>ontap()</Trigger>
      <Sequence>
	<Block>translate(RIGHT, 1)</Block>
	<Block>translate(RIGHT, 1)</Block>
	<Block>translate(RIGHT, 1)</Block>
      </Sequence>
    </Script>
    <Script>
      <Trigger>onmessage(TWO)</Trigger>
      <Sequence>
	<Block>translate(UP, 1)</Block>
	<Block>translate(LEFT, 1)</Block>
	<Block>translate(LEFT, 1)</Block>
      </Sequence>
    </Script>
    <Script>
      <Trigger>onmessage(END)</Trigger>
      <Sequence>
	<Block>stopscripts()</Block>
      </Sequence>
    </Script>
  </Character>

  <Character
      row="2"
      col="2" color="white, backred">
    <Script>
      <Trigger>oncollision()</Trigger>
      <Sequence>
	<Block>translate(UP, 1)</Block>
	<Block>sendmessage(TEST)</Block>
	<Block>translate(LEFT, 1)</Block>
      </Sequence>
    </Script>
    <Script>
      <Trigger>onmessage(END)</Trigger>
      <Sequence>
	<Block>stopscripts()</Block>
      </Sequence>
    </Script>
  </Character>

  <Character
      row="0"
      col="0" color="white, backgreen">
    <Script>
      <Trigger>onmessage(TEST)</Trigger>
      <Sequence>
	<Block>translate(RIGHT, 1)</Block>
	<Block>translate(DOWN, 1)</Block>
      </Sequence>
    </Script>
    <Script>
      <Trigger>oncollision()</Trigger>
      <Sequence>
	<Block>sendmessage(TWO)</Block>
      </Sequence>
    </Script>
    <Script>
      <Trigger>onmessage(END)</Trigger>
      <Sequence>
	<Block>stopscripts()</Block>
      </Sequence>
    </Script>
  </Character>

  <Character
      row="1"
      col="3" color="white, backmagenta">
    <Script>
      <Trigger>oncollision()</Trigger>
      <Sequence>
	<Block>sendmessage(END)</Block>
      </Sequence>
    </Script>
    <Script>
      <Trigger>onmessage(END)</Trigger>
      <Sequence>
	<Block>stopscripts()</Block>
      </Sequence>
    </Script>
  </Character>

</Page>
